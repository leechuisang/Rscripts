# ==== Check and install all libraries needed ====
# Make a list of all packages required
req_packages <-                             
  c(# To update R use: updateR(), pkg "stringr" automatically installed with it
    "installr",                             
    "magrittr",                             # For pipelining %>%
    "dplyr", "gdata", "ggplot2", "ggpubr",  # Analysis packages plotting data
    "RColorBrewer","wesanderson"            # For formatting
    )

# Load all libraries, and install and load if package is missing
for(pkg in req_packages){
  if(!require(pkg, character.only = TRUE)){
    install.packages(pkg)
    require(pkg, character.only = TRUE)
  }
}
